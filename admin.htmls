        <!-- Usuarios -->
        <section class="row" id="users">
            <h2>Gesti√≥n de usuarios</h2>
            <p>Agrega y administra usuarios del sistema</p>

            <div class="col-lg-12 p-2 d-flex flex-column gap-4">
                <div class="card">
                    <div class="card-body">
                        <h4>Agregar usuario</h4>
                        <p>Completa el formulario para crear un nuevo usuario</p>
                        <form id="user-form">
                            <div class="mb-3">
                                <input type="text" class="form-control" placeholder="RUT Sin puntos ni guion"
                                    maxlength="9" minlength="7" id="run" required>
                            </div>
                            <div class="mb-3">
                                <input type="text" class="form-control" placeholder="Nombres (Maximo 50 caracteres)"
                                    maxlength="50" id="name" required>
                            </div>
                            <div class="mb-3">
                                <input type="text" class="form-control" placeholder="Apellidos (Maximo 100 caracteres)"
                                    maxlength="100" id="lastname" required>
                            </div>

                            <div class="mb-3">
                                <input type="email" class="form-control"
                                    placeholder="Correo Electr√≥nico (M√°ximo 100 caracteres)" id="email" maxlength="100"
                                    required>
                            </div>

                            <div class="mb-3">
                                <input type="tel" class="form-control"
                                    placeholder="Telefono (Opcional - Solo n√∫meros)" id="phone" maxlength="9">
                            </div>

                            <div class="mb-3">
                                <label for="birthday">Fecha de nacimiento (Opcional)</label>
                                <input type="date" class="form-control" id="birthday">
                            </div>

                            <div class="mb-3">
                                <select id="user-type" class="form-select" required>
                                    <option value="">Indica el tipo de usuario</option>
                                    <option value="">Cliente</option>
                                    <option value="">Vendedor</option>
                                    <option value="">Administrador</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <select name="" class="form-control" id="regiones" required>
                                    <option value="" class="text-black">Seleccione una region</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <select name="" class="form-control" id="comunas" required disabled>
                                    <option value="" class="text-black">Seleccione una comuna</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <input type="text" class="form-control"
                                    placeholder="Direcci√≥n (M√°ximo 300 caracteres)" id="direction" maxlength="300"
                                    required>
                            </div>

                            <div class="mb-3">
                                <input type="password" class="form-control"
                                    placeholder="Contrase√±a (M√≠nimo 4 caracteres)" id="password" minlength="4"
                                    maxlength="10" required>
                            </div>

                            <div class="mb-3">
                                <input type="password" class="form-control" placeholder="Repetir contrase√±a"
                                    id="confirm-password" minlength="4" maxlength="10" required>
                            </div>

                            <div class="error">
                            </div>

                            <button type="submit" class="btn btn-dark">Crear usuario</button>

                        </form>
                    </div>
